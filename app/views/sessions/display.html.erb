<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <h1>Devices logged in from</h1>

  <% @sessions.each_with_index do |session, i| %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <% details = session.details.split('$') %>
        <pre>Session <%= i + 1 %></pre>
        <tr><th>Browser:</th> <td><%= details[0] %></td></tr>
        <tr><th>Platform:</th> <td><%= details[1] %></td></tr>
        <tr><th>Location:</th> <td><%= details[2] %></td></tr>
      </table>
    </div>
  <% end %>

  <%= link_to "Back to kittens index", cats_url %>
</div>
